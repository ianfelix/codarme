{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Ian Felix",
    "email": "ianfelix030@gmail.com"
  },
  "scripts": {
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format 'src/**/*.(jsx|js|tsx|ts|md|json)'",
    "lint": "yarn fix:lint src/**/*.{jsx,js,tsx,ts,md,json}",
    "prepare": "cd .. && cd .. && husky install puf/api/.husky",
    "prebuild": "rm -Rf ./dist",
    "build": "babel src --extensions \".js,.ts\" --ignore \"*.spec.js,*.test.js\" --out-dir dist --copy-files",
    "dev": "nodemon --exec babel-node src/index.js "
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**/*.{js,ts,md,json}": [
      "yarn fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.17.10",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.4.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2"
  }
}
